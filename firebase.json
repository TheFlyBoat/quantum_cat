{
  "hosting": {
    "public": "out",
    "ignore": ["**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "trailingSlash": false,
    "headers": [
      { "source": "**/*.@(js|css)", "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }] },
      { "source": "**/*", "headers": [{ "key": "Cache-Control", "value": "public,max-age=60" }] }
    ],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
